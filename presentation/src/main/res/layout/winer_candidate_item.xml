<?xml version="1.0" encoding="utf-8"?>



    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        android:background="#fff"

       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/winer_candidates_item_circleImageView"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/winer_candidates_item_circleImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/winer_candidates_item_circleImageView"
        app:layout_constraintTop_toTopOf="@+id/winer_candidates_item_circleImageView">

        <TextView
            android:id="@+id/winer_candidates_item_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:paddingStart="4dp"
            android:text="Jair Bolsonaro"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/winer_candidates_item_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:text="snake"
            android:textColor="#AE000000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/winer_candidates_item_percent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_weight="1"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:text="percent voter 40%"
            android:textColor="#A4000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

